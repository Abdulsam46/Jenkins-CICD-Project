pipeline {
  agent none

  stages {

    stage('Build and Test') {
      agent {
        docker {
          image 'abdul46/maven-docker-agent:v2'
          args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
      }
      steps {
        dir('java-spring-dashboard') {
          sh 'mvn -q -B -ntp clean package'
        }
      }
    }

    stage('Static Code Analysis') {
      agent {
        docker {
          image 'abdul46/maven-docker-agent:v2'
          args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
      }
      environment {
        SONAR_URL = 'http://34.195.20.40:9000'
      }
      steps {
        withCredentials([string(credentialsId: 'sonar', variable: 'SONAR_AUTH_TOKEN')]) {
          dir('java-spring-dashboard') {
            sh '''
              mvn -q -B -ntp sonar:sonar \
                -Dsonar.login=$SONAR_AUTH_TOKEN \
                -Dsonar.host.url=$SONAR_URL
            '''
          }
        }
      }
    }

    stage('Build and Push Docker Image') {
      agent {
        docker {
          image 'abdul46/maven-docker-agent:v2'
          args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
      }
      environment {
        DOCKER_IMAGE = "abdul46/spring-boot-dashboard:${BUILD_NUMBER}"
      }
      steps {
        dir('java-spring-dashboard') {
          script {
            sh 'docker build -t ${DOCKER_IMAGE} .'
            docker.withRegistry('https://index.docker.io/v1/', 'docker-cred') {
              docker.image("${DOCKER_IMAGE}").push()
            }
          }
        }
      }
    }

    stage('Update Deployment File') {
      agent any
      steps {
        dir(env.WORKSPACE) {
          sh '''
            git config user.email "abdul@test.com"
            git config user.name "Abdul"

            sed -i "s|image: .*|image: abdul46/spring-boot-dashboard:${BUILD_NUMBER}|" \
              java-spring-dashboard/spring-boot-app-manifests/deployment.yml

            git add java-spring-dashboard/spring-boot-app-manifests/deployment.yml
            git commit -m "Update image to ${BUILD_NUMBER}"
            git push origin main
          '''
        }
      }
    }
  }
}
